<table class="tables">
  <tr>
    <th>Artist name</th>
    <th>Title</th>
    <th>Quantity</th>
    <th>Buy price</th>
    <th>Sell price</th>
    <th>Markup</th>
    <th>Edit details</th>
    <th>Clear quantity</th>

  </tr>
  <tr>
<td><%= @album.artist.name %></td>
<td><%= @album.title %></td>
<td><%= @album.quantity %></td>
<td><%= @album.buy_price.to_i %></td>
<td><%= @album.sell_price.to_i %></td>
<td><%= @album.markup %></td>
<td>
  <form method="get" action="/albums/<%= @album.id %>/edit">
  <button type="submit">Edit details</button></td>
</form>
<td>
  <form method="post" action="/albums/<%= @album.id %>">
    <input type="hidden" name="_method" value="delete">
    <button>Clear quantity</button></td>
</form>

</tr>
</table>

<br>

<form method="get" action="/">
  <button>Back to main page</button>
</form>
