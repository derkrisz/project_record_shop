<img src="/ricks_records.jpg"</img>
<h1><%= @artist.name %></h1>
<table class="tables">
  <tr>
    <th>Album title</th>
    <th>Quantity</th>
    <th>Buy price</th>
    <th>Sell price</th>
    <th>Markup</th>
  </tr>
  <tr>
    <% @albums.each do |album| %>
    <td><%=album.title%></td>
    <td><%=album.quantity%></td>
    <td><%=album.buy_price.to_i%></td>
    <td><%=album.sell_price.to_i%></td>
    <td><%=album.markup%></td>
  </tr>
  <% end %>
</table>

<br>

<form method="get" action="/artists">
  <button>Back to artists</button>
</form>
